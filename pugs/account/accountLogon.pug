extends ../layout.pug
block _BLOCK_TITLE_
	title 로그인

block _BLOCK_SCRIPT_
	script(src='/js/submit.js' type='text/javascript')
	script(src='/js/formchecker.js' type='text/javascript')
	script(src='/js/user.js' type='text/javascript')
	
block _BLOCK_LOCATION_
	<a href='/'>HOME</a> / <a href='/account/'>ACCOUNT MANAGEMENT</a> / <a href='/login/'>LOGIN</a>

block _BLOCK_CONTENT_
	h1 로그인
	form(name='frmEnt' id='frmEnt' method='post' action='/login') 
		div
			label(for='user_id') 이메일주소
			<input type='text' name='user_id' id='user_id' value='#{wuserid}' placeholder='이메일주소를 입력하십시오'>
		div
			label(for='user_pw') 비밀번호
			input(type='password' name='user_pw' id='user_pw' placeholder='비밀번호를 입력하십시오')
			input(type='hidden' name='r' id='r')
		div#btns
			input(type='submit' value='로그인')
			button(onclick='forgot();return false;' title='비밀번호재발급신청') 비밀번호가 기억나지 않나요?
block _BLOCK_SCRIPT_POST_
	script.
		showAlert('#{e}');
		showNotice('#{i}');
		if('#{r}'.length>0) { $('#r').val('#{r}'); }
		function forgot() {
			if (confirm('새로운 비빌번호를 등록하신 이메일로 보내드립니다. 계속하시겠습니까?')) {
				location.href='/account/forgot/' + $('#user_id').val();
			}
		}
	



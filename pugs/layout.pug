doctype html
html(lang='ko')
	head
		meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
		meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no, target-densitydpi=medium-dpi')
		meta(name='format-detection' content='telephone=no')
		meta(name="mobile-web-app-capable" content="yes")
		meta(name="apple-mobile-web-app-capable" content="yes")
		block _BLOCK_TITLE_
		link(rel='apple-touch-icon-precomposed' href='/favicon.ico')
		link(rel='shortcut icon' href='/favicon.ico')
		link(rel='stylesheet' href='/css/style.css' type='text/css' media='all')
		block _BLOCK_CSS_
		script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js" type='text/javascript')
		script(src='/js/common.js' type='text/javascript')
		block _BLOCK_SCRIPT_
	body
		div#section_pop_menu
			include ./leftmenu.pug
		div#container
			div#header
				div#section_logo 
					img#menu(src='/images/btnBurger.png' onclick='controlPopMenu();return false;' alt='메뉴열기' title='메뉴열기')
					span#domain #{global.strDomainUser}
				div#section_logon_status
					script(type='text/javascript') setLogonStatusSection('#{userid}', '#{usernm}');
			div#section_top_navigation
				block _BLOCK_TOP_NAVIGATION_
			div#alert
			div#article
				div#section_left
					block _BLOCK_LEFT_
				div#section_location
					block _BLOCK_LOCATION_
				div#section_body
					block _BLOCK_CONTENT_
				div#section_right
					block _BLOCK_RIGHT_
			iframe#actionframe(name='actionframe' title='화면전환없는 데이터 처리를 위한 감춰진 프레임')
			div#footer
				div#copyright COPYRIGHTⓒ<b></b>. ALL RIGHTS RESERVED.
		div#bottom
		block _BLOCK_BOTTOM_
		img#gotop(src='/images/top.png' onclick='goTop();' alt='go top' title='go top')
		script(src='/js/onloaded.js' type='text/javascript')
		block _BLOCK_SCRIPT_POST_
		